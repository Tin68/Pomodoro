<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/rayas">
        <shape android:shape="oval">
            <size
                android:width="50dp"
                android:height="50dp"
                 />

            <stroke
                android:width="1dp"
                android:color="@color/colorAccent"
                android:dashWidth="1dp"
                android:dashGap="1dp" />
        </shape>
    </item>
